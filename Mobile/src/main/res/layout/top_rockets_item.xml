<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/DisplayOrComputerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Falcon 1" />

    <TextView
        android:id="@+id/resolutionOrCPU"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/DisplayOrComputerName"
        tools:text="97" />

    <TextView
        android:id="@+id/sizeOrRAM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/resolutionOrCPU"
        tools:text="97" />

    <TextView
        android:id="@+id/matrix_typeOrGPU"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/sizeOrRAM"
        tools:text="97" />

    <TextView
        android:id="@+id/frequencyOrStorage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/matrix_typeOrGPU"
        tools:text="97" />

    <TextView
        android:id="@+id/prices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/frequencyOrStorage"
        tools:text="97" />

    <ImageView
        android:id="@+id/imagess"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/prices" />

    <TextView
        android:id="@+id/find"
        android:layout_width="300dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/DisplayOrComputerName"
        app:layout_constraintTop_toBottomOf="@+id/imagess"
        tools:text="97" />


</androidx.constraintlayout.widget.ConstraintLayout>